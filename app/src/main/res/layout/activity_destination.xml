<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DestinationActivity">

    <TextView
        android:layout_width="171dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="MATH QUIZ"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="258dp"
        android:layout_height="86dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="32dp"
        android:background="#03C8DA"
        android:gravity="center_horizontal|center_vertical"
        android:text="Find 3 correct answers to close the alarm off"
        android:textColor="#1FF8FF"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/counterWins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/counterWins"
        android:layout_width="216dp"
        android:layout_height="61dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="60dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Correct: 0/3"
        android:textColor="@color/black"

        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/mathEquation"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mathEquation"
        android:layout_width="216dp"
        android:layout_height="61dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="284dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="1050 + 25 = ?"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/option1"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="190dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mathEquation" />

    <Button
        android:id="@+id/option2"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="70dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mathEquation" />

    <Button
        android:id="@+id/option3"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="190dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1" />

    <Button
        android:id="@+id/option4"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="50dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option2" />
    <!--
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Activity"
        android:textColor="@color/black"
        android:textSize="36dp"
